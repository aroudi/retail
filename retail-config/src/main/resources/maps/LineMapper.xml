<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="au.gov.nsw.railcorp.cimg.dao.LineDao">
    <!-- result maps -->
    <resultMap id="lineMap" type="Line" >
        <id column="LINEID" property="lineId" />
        <result column="LINECODE" property="lineCode" />
        <result column="NAME" property="name" />
    </resultMap>
    <select id="getAllLines" resultMap="lineMap" >
        SELECT
          LINEID,
          LINECODE,
          NAME
        FROM
          LINE
        ORDER BY
          NAME
    </select>
</mapper>