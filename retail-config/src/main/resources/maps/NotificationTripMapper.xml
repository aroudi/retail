<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="au.gov.nsw.railcorp.cimg.dao.NotificationTripDao">
    <!-- result maps -->
    <insert id="insert" parameterType="NotificationTrip" useGeneratedKeys="true">
        <selectKey keyProperty="notificationTripId" resultType="java.lang.Long" order="BEFORE">
            SELECT NOTIFICATION_TRIP_SEQ.nextVal FROM dual
        </selectKey>
        INSERT INTO notification_trip(
          NOTIF_TRIP_ID,
          NOTIFICATION_ID,
          TRIP
        ) VALUES (
          #{notificationTripId},
          #{notificationId},
          #{trip}
        )
    </insert>

    <delete id="delete" >
        DELETE
        From notification_trip
        WHERE
        NOTIFICATION_ID = #{value}
    </delete>

</mapper>