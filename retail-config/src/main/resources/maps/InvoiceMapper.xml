            ,#{txdeQuantitySold}
        </if>
        <if test="txdeQuantitySold == null">
            ,null
        </if>

        <if test="txdeQtyRefund != null">
            ,#{txdeQtyRefund}
        </if>
        <if test="txdeQtyRefund == null">
            ,null
        </if>

